<div class="container-fluid">
	<div class="row">
		<div class="col-4">
			<div class="scp-breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item" id="page1"><a href="/AnswerWizard/Index">Wizard</a></li>
					<li class="breadcrumb-item" id="categoryQuestion"></li>
					<li class="breadcrumb-item" id="page3"><a href="">Search Criteria</a></li>
					<li class="breadcrumb-item active">Data Grid</li>
				</ol>
			</div>
		</div>
		<div class="col-7" style="cursor: pointer;">
			@*<img src="~/Content/assets/images/OrangeSlices1000.png" style="height: 100px; width: 950px; " />*@
		</div>
		<div class="col-1" id="shareIcon" style="cursor: pointer;">
			<img src="~/Content/assets/images/share.png" data-toggle="tooltip" data-placement="bottom" title="Share URL" onclick="copyToClipboard()" style="float: right; width: 30px; height: 30px; margin-right: 10px;" />
		</div>
	</div>
</div>


<div class="container-fluid" style="margin-left:0px !important;">
    <div class="row">
        <div class="col-11">
            <h1 class="heading-title" style="max-width: 100%; font-size: 1.5rem;">
                <span id="heading"></span>
                <span id="vendor_name"></span>
            </h1>
            @*<h1 class="heading-title" style=" white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%; font-size: 1.5rem;"></h1>*@
        </div>
        <div class="col-1" style="cursor: pointer;">
            <span data-toggle="modal" data-target="#exampleModalCenter">
                <img src="~/Content/assets/images/help.png" data-toggle="tooltip" data-placement="bottom" title="Help" style="float: right; width: 30px; height: 30px; margin-right: 10px;" />
            </span>
        </div>
    </div>
    <div class="row my-2">
		<div class="col-10">

			<h5 class="question_decription_text" id="sub_heading" style="max-width: 100%;"></h5><br />
			<h5 class="question_decription_text" id="agencyName" style="max-width: 100%;"></h5>

		</div>
        <div class="col-2 text-right" style="padding-right: 0px;">
            @*<button class="btn dealbtn" onclick="exportToCsv()">Export to Excel</button>*@
            <button class="dt-button excelIcon" tabindex="0" aria-controls="searchreportData" onclick="exportToCsv()" title="Export to Excel"><span></span></button>
        </div>
        <div class="col-2 text-right">
            <h5 class="question_decription_text" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%;"><i>Click any row to view full contract details.</i></h5>
        </div>
        <div class="col-10 text-right">
            <h5 class="question_decription_text" id="total_records" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%;"></h5>
        </div>

    </div>

    <div class="row">

		<div class="col-12 tableParent">
			<table class="table table-striped" id="datagrid">
				<thead class="bg-purple-header text-white" id="tableHeaders">

				</thead>
				<tbody id="tableBody">
				</tbody>
			</table>
			<table class="table table-striped" id="datagrid47" style="display:none">
				<thead class="bg-purple-header text-white" id="tableHeaders">
                    <tr>
                        <th>Vendor</th>
						<th>Referenced IDV ID</th>
						<th>Contract Number</th>
						<th>IDV Type</th>
						<th>Award Type</th>
                        <th>Vendor UEI</th>
						<th>Total Base And All Options</th>
						<th>Action Date</th>
						<th>Transaction ID</th>
                    </tr>
				</thead>
				<tbody id="tableBody47">
				</tbody>
			</table>
		</div>

    </div>
</div>

