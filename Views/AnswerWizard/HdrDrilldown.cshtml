<div class="modal fade" id="editModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-purple-header">
                <h5 class="modal-title" id="exampleModalLongTitle"><strong>Edit Notes</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="edit-uei" />
                    </div>
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="edit-contract" />
                    </div>

                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Status:</label>
                        <select id="edit-status" style="width: 100%; border: 1px solid #ced4da; border-radius: 5px;">
                            <option>Select</option>
                            <option>Always Active</option>
                            <option>Active for Now/Wait</option>
                            <option>Sunset</option>
                            <option>Delete</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Action:</label>
                        <select id="edit-action" style="width: 100%; border: 1px solid #ced4da; border-radius: 5px;">
                            <option>Select</option>
                            <option>Sunset</option>
                            <option>Migrate</option>
                            <option>Novate</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Notes:</label>
                        <textarea class="form-control" id="edit-notes"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn save bg-purple-header" onclick="save_changes()">Save</button>
            </div>
        </div>
    </div>
</div>

