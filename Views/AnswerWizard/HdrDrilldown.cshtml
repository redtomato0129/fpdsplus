<div class="row">
	<div class="col-10">
		<h5 class="vendor_name_display" id="vendor" style=" white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%;"></h5><br />
		<h5 class="vendor_name_display" id="uei" style=" white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%;"></h5><br />
		<h5 class="vendor_name_display" id="option" style=" white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%;"></h5><br />
	</div>	
</div>

<div class="row">
	<div class="mt-3 col-10">
		<h5 class="helpline_text"><i>Click any Contract/Contract Order Number to view CPARS and Contract Obligations.</i></h5>
	</div>
	<div class="col-2 text-right" style="padding-right: 0px;">
		<button class="dt-button excelIcon" tabindex="0" aria-controls="searchreportData" onclick="exportToCsv()" title="Export to Excel"><span></span></button>
	</div>
</div>

<div class="row">
	<div class="tableParent col-12">
		<table class="table table-striped">
			<thead class="bg-purple-header" id="cparsTable">
				<tr>
					<th>Contract Number</th>
					<th>Contract Order Number</th>
					<th>Agency Name</th>
					<th>Quality Rating</th>
					<th>Schedule Rating</th>
					<th>Cost Control Rating</th>
					<th>Management Rating</th>
					<th>Small Business Rating</th>
					<th>Regulatory Compliance Rating</th>
					<th>Assessing Official Recommend</th>
					<th>Assessing Official Signed Date</th>
				</tr>
			</thead>
			<thead class="bg-purple-header" id="idiqTable" style="display:none">
				<tr>
					<th>Contract Number</th>
					<th>Contract Order Number</th>
					<th>Mod #</th>
					<th>Funding Sub-Agency</th>
					<th>Funding Office</th>
					<th>NAICS</th>
					<th>PSC</th>
					<th>Start Date</th>
					<th>End Date</th>
					<th>Expire Year</th>
					<th>Base and All Options</th>
					<th>Action Obligations</th>
					<th>Status</th>
					<th>Action</th>
					<th>Notes</th>
					<th>Updated</th>
					<th>@*Edit*@</th>
				</tr>
			</thead>
			<tbody id="tableBody">
			</tbody>
		</table>
	</div>
</div>

