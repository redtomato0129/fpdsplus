<div class="container-fluid" style="margin-left:0px !important;">
    <div class="row">
        <div class="col-12">
          
            <div class="result__filter d-flex justify-content-between align-items-center my-3">
                <div class="filter__date d-flex align-items-center">
                    <h1 class="heading-title"><strong>Email Notification</strong></h1>
                </div>
                <div class="filter__days d-flex align-items-center">
                    <h3>Email Notification</h3>
                    <label class="switch">
                        <input type="checkbox" id="enableNotification" checked>
                        <span class="slider"></span>
                    </label>
                </div>
            </div>
        </div>
       
        <div class="col-4">
            <div class="cmi__email">
                <div class="email__heading h4">
                    Set Email Frequency by
                </div>
                <div class="email__day">
                    <div class="custom-control custom-radio d-flex justify-content-between align-items-center mb-2">
                        <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input" value="Daily">
                        <label class="custom-control-label" for="customRadio1">Daily</label>
                        <select class="custom-select w-25" id="timeList">
                            
                        </select>
                    </div>
                    <div class="custom-control custom-radio d-flex justify-content-between align-items-center mb-2">
                        <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input" value="Every-week">
                        <label class="custom-control-label" for="customRadio2">Every week</label>
                        <select class="custom-select w-25" id="everyWeekList">
                           
                        </select>
                    </div>
                    <div class="custom-control custom-radio d-flex justify-content-between align-items-center mb-2">
                        <input type="radio" id="customRadio3" name="customRadio" class="custom-control-input" value="Every-other-week">
                        <label class="custom-control-label" for="customRadio3">Every other week</label>
                        <select class="custom-select w-25" id="otherWeekList">
                           
                        </select>
                    </div>
                    <div class="custom-control custom-radio d-flex justify-content-between align-items-center">
                        <input type="radio" id="customRadio4" name="customRadio" class="custom-control-input" value="Monthly">
                        <label class="custom-control-label" for="customRadio4">Monthly  <small id="customRadio4" class="text-muted">(1st day of Month)</small></label>
                    </div>
                </div>
            </div>
            <input type="hidden" id="emailNotificationId" value="" />
            <div class="text-right my-3">
                <button class="btn dealbtn" onclick="saveEmailNotification()">Save</button>
            </div>
        </div>

        </div>
</div>




