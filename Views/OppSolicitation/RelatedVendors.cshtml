@{
    ViewBag.Title = "Related Vendors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/AppCss/Search.css" rel="stylesheet" />
<link href="~/Content/AppCss/toggle.css" rel="stylesheet" />
<script src="~/Scripts/AppJS/RelatedVendors.js"></script>
<input type="hidden" name="agency_code" id="agency_code" value="@ViewBag.agency_code" />
<input type="hidden" name="department_code" id="department_code" value="@ViewBag.department_code" />
<input type="hidden" name="naics_code" id="naics_code" value="@ViewBag.naics_code" />
<div class="innerbody">
    <div class="col-lg-12 row">
        <div class="col-lg-3" style="padding: 0;flex: 0 0 20%;">
            <nav class="breadcrumb" style="padding: 0px 2px;margin-bottom: 10px;">
                <a class="breadcrumb-item" id="sear"> Related Vendors</a>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="card card-body">
            <div class="row s027">

                <div class="col-md-3 offset-md-1 btn-group btn-toggle mb-2 s003" style="display: initial;">
                    <img data-toggle="tooltip" title="Click here to show the search criteria" id="IDshowResult" class="s028 s029 drops" src="~/Content/assets/images/upward.png" />
                    <img data-toggle="tooltip" title="Click here to hide the search criteria and begin a new search" id="IDshowfields" class="s028 s029 drops" src="/Content/assets/images/downward.png" />
                </div>
                <div class="row col-md-12" style="margin-top: 12px;">

                    <div class="col-md-12">
                        <div class="gridTbl" style="width: 100%;margin-left: 0px;border: 1px solid #e6e6e6;padding: 10px;">
                            <table id="relatedVendor_tbl" class="table table-striped table-bordered dt-responsive" style="font-family: sans-serif;width: 100%">
                                <thead>
                                    <tr>
                                        <th title="Row"><label>Index#</label></th>
                                        <th title="Name"> <label>Vendor Name</label> </th>
                                        @*<th title="Recipient UEI"> <label>"Recipient UEI</label> </th>*@
                                        <th title="Cage"> <label> Cage</label> </th>
                                        <th title="TotalFunding"> <label> Total Funding</label> </th>

                                    </tr>
                                </thead>
                                <tbody id="RelatedVendor_tbody" style="font-size:15px !important;"> </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

