
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}
<link href="~/Content/AppCss/Register.css" rel="stylesheet" />
<script src="~/Scripts/AppJS/Login.js"></script>
<style>
    body {
    overflow-y:hidden
    }
    .icon{
        border-radius: 20px;
    border: 1px solid;
    padding: 5px;
    font-size: 10px;
    }
    .anotheracct:hover {
        background: #efefef;
        cursor:pointer;
    }
    .anotheracct>label:hover {
        background: #efefef;
        cursor:pointer;
    }
    .R005 {
    font-size: 14px;
    width: 88%;
    color: #afafaf;
    margin-left: 37px;
    font-weight:500;
    font-style:italic;
}
</style>

<div class="auth-box" id="loginForm" style="max-width: 450px !important;">
    <div id="loginform">
        <div class="logo">
            @*<h3 class="font-medium m-b-20 C001 cl001">Welcome!</h3>*@

            <h4 class="font-medium m-b-20  C001 cl001" id="loginHeading"></h4>
            <h5 id="paidLoginTxt" class="font-medium m-b-20" style="margin-bottom: 10px;">Login to your account</h5>
            <h5 id="publicLoginTxt" class="font-medium m-b-20" style="margin-bottom: 10px; display:none">Login to your public account</h5>

        </div>

        <!-- Form -->
        <div class="row">
            <div class="col-12">
                @*<form class="form-horizontal m-t-20" action="/Dashboard/Index">*@
                <div class="Login">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                        </div>
                        <input type="text" class="form-control form-control-lg" id="txtUserName" placeholder="Email" aria-label="Email" aria-describedby="basic-addon1">
                    </div>
                    <div style="display:none" id="password_div" class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon2"><i class="ti-lock"></i></span>
                        </div>
                        <input type="password" class="form-control form-control-lg" id="txtPassword" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1">
                    </div>
                    @*<div class="form-group row">
                            <div class="col-md-12">
                                <div class="custom-control custom-checkbox d-flex align-items-center">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                </div>
                            </div>
                        </div>*@
                    <div class="form-group text-center">
                        <div class="col-xs-12 p-b-20">
                            <button style="display:none" class="btn btn-block btn-lg btn-info" id="LoginUser">Log In</button>
                            <button class="btn btn-block btn-lg btn-info" id="AuthUser">Authenticate</button>
                            <div class="anotheracct" style="margin-top: 14px;"><i class="ti-user icon"></i><label class="" style="font-weight: 200;padding: 11px 5px 3px 5px;">use another account</label></div>
                        </div>
                    </div>
                    <div class="form-group m-b-0 m-t-10">
                        <div class="col-xs-12 text-center" id="registerMessage">
                           
                        </div>
                    </div>
                </div>
                @*</form>*@
            </div>
        </div>
    </div>
    <div id="recoverform">
        <div class="logo">
            <span class="db"><img src="~/Content/assets/images/logo-icon.png" alt="logo" /></span>
            <h5 class="font-medium m-b-20">Recover Password</h5>
            <span>Enter your Email and instructions will be sent to you!</span>
        </div>
        <div class="row m-t-20">
            <!-- Form -->
            <form class="col-12">
                <!-- email -->
                <div class="form-group row">
                    <div class="col-12">
                        <input class="form-control form-control-lg" type="email" required="" placeholder="Username">
                    </div>
                </div>
                <!-- pwd -->
                <div class="row m-t-20">
                    <div class="col-12">
                        <button class="btn btn-block btn-lg btn-danger" type="submit" name="action">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

  @*@Session["isTrialUser"].GetType();*@
    <div class="Verification" id="verification_box">
        <div class="row" id="maintenance">
            <div class="R003">
                <h4><img style="padding-right: 13px;" src="~/Content/assets/images/Fed/check.png" />A Verification Email has been sent to your account</h4>
            </div>
            <div class="R001"></div>
            <div class="R003"><h4 class="R002">Check your email for a message that contains a click the link to verify your email and continue the Login process</h4></div>
            <div class="R003"><h4 class="R005">If you do not see the email in your inbox check your spam folder for an email from <span style="text-decoration: underline;">support@fedpipeline.com</span></h4></div>
            @*<div class="R003">
                    <button class="btn btn-block btn-lg btn-info B_R002" id="go">Ok</button>
                </div>*@
        </div>


    </div>
</div>
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false"
     tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Important Notice</h5>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>*@
            </div>
            <div class="modal-body" id="modal_text" style="font-size:25px; text-align:center;"></div>
            @*<div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Understood</button>
            </div>*@
        </div>
    </div>
</div>