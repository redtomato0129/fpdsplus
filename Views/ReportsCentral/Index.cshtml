    <div class="row" style="justify-content:center;">
        <button class="filtersButton">Click to apply filters</button>
    </div>
</div>


<div class="container-fluid mt-2" style="margin-left:0px !important;">
    <div class="row">
        <div class="col-12">
            <div class="rc_background">
                <div class="col-2">
                    <div class="section-toggle" onclick="toggleSection('funding')">
                        <span class="toggle-icon" id="icon-funding">+</span> Funding Agencies
                    </div>
                    <div id="funding" class="section-content">
                        <label id="fundingAgencyLabel" style="cursor: pointer;">Select Funding Agency</label><br />
                        <input type="checkbox" /> <label>Civilian</label><br />
                        <input type="checkbox" /> <label>All Agencies</label>
                    </div>

                    <div class="section-toggle" onclick="toggleSection('awarding')">
                        <span class="toggle-icon" id="icon-awarding">+</span> Awarding Agencies
                    </div>
                    <div id="awarding" class="section-content">
                        <ul>
                            <li>GSA (IDV, MAS, etc.)</li>
                            <li>DOI</li>
                            <li>NASA(SEWP)</li>
                            <li>NIH (CIO-IDVs)</li>
                        </ul>
                    </div>
                </div>

                <div class="column">
                    <div id="upper_graph" onclick="routeTo('stacked')">
                        <img src="~/Content/assets/images/rc_stacked.png" style="width:100%; height:100%;" data-toggle="tooltip" data-placement="bottom" title="Stacked Column Chart" />
                    </div>
                    <div id="lower_graph" onclick="routeTo('column')">
                        <img src="~/Content/assets/images/rc_column.png" style="width:100%; height:100%;" data-toggle="tooltip" data-placement="bottom" title="Column Chart" />
                    </div>
                </div>
                <div class="column">
                    <div id="upper_graph" onclick="routeTo('bar')">
                        <img src="~/Content/assets/images/rc_bar.png" style="width:100%; height:100%;" data-toggle="tooltip" data-placement="bottom" title="Bar Chart" />
                    </div>
                    <div id="lower_graph" onclick="routeTo('columnLine')">
                        <img src="~/Content/assets/images/rc_columnLine.png" style="width:100%; height:100%;" data-toggle="tooltip" data-placement="bottom" title="Column + Line Chart" />
                    </div>
                </div>
                <div class="column">
                    <div id="upper_graph" onclick="routeTo('line')">
                        <img src="~/Content/assets/images/rc_line.png" style="width:100%; height:100%;" data-toggle="tooltip" data-placement="bottom" title="Line Graph" />
                    </div>
                    <div id="lower_graph" onclick="routeTo('heatmap')">
                        <img src="~/Content/assets/images/rc_heatmap.png" style="width:100%; height:100%;" data-toggle="tooltip" data-placement="bottom" title="Heatmap" />
                    </div>
                </div>
                <div class="column">
                    <div id="upper_graph" onclick="routeTo('pie')">
                        <img src="~/Content/assets/images/rc_pie.png" style="width:100%; height:100%;" data-toggle="tooltip" data-placement="bottom" title="Pie Chart" />
                    </div>
                    <div id="lower_graph" onclick="routeTo('dumbell')">
                        <img src="~/Content/assets/images/rc_dumbell.png" style="width:100%; height:100%;" data-toggle="tooltip" data-placement="bottom" title="Dumbell Chart" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->

<div id="fundingAgencyModal" class="modal" tabindex="-1" aria-labelledby="exampleModalLabel" role="dialog" data-backdrop="static" data-keyboard="false" aria-modal="true">
    <div class="modal-dialog modal-dialog-centered" role="document" style="max-width:80%">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Select Agency</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="agencyHtml" class="row col-12">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn filtersButton" id="saveAgency">Save</button>
            </div>
        </div>
    </div>
</div>

